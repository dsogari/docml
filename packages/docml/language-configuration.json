{
  "comments": {
    "blockComment": ["[", "]"]
  },
  "brackets": [["[", "]"]],
  "autoClosingPairs": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["\"", "\""],
    ["'", "'"],
    ["`", "`"],
    ["«", "»"]
  ],
  "surroundingPairs": [
    ["{", "}"],
    ["[", "]"],
    ["(", ")"],
    ["\"", "\""],
    ["'", "'"],
    ["`", "`"],
    ["«", "»"]
  ],
  "onEnterRules": [
    {
      "beforeText": "\\[[^\\]]*$",
      "afterText": "^\\s*]",
      "action": { "indent": "indentOutdent" }
    },
    {
      "beforeText": "\\[[^\\]]*$",
      "action": { "indent": "indent" }
    }
  ]
}
