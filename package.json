{
  "name": "docml",
  "description": "Please enter a brief description here",
  "version": "0.0.1",
  "files": [
    "bin",
    "out",
    "src"
  ],
  "type": "module",
  "scripts": {
    "prepare": "husky",
    "build": "tsc -b tsconfig.src.json && bun run build:extension && bun run build:language",
    "build:extension": "bun build --minify --target=node --format=cjs --external=vscode --outfile=out/extension/main.cjs src/extension/main.ts",
    "build:language": "bun build --minify --target=node --format=cjs --ignore-dce-annotations --outfile=out/language/main.cjs src/language/main.ts",
    "generate": "langium generate",
    "generate:production": "langium generate --mode=production",
    "export:diagram": "bun run export-diagram.ts static/railroadDiagram.html",
    "vscode:prepublish": "bun run build && bun run lint",
    "bundle": "vite build",
    "serve": "ws -d dist",
    "dev": "vite",
    "dev:debug": "vite --debug --force"
  },
  "dependencies": {
    "langium": "~3.4.0",
    "vscode-languageclient": "~9.0.1",
    "vscode-languageserver": "~9.0.1",
    "chalk": "~5.3.0",
    "commander": "~11.0.0",
    "@codingame/monaco-vscode-editor-service-override": "~3.2.3",
    "@codingame/monaco-vscode-keybindings-service-override": "~3.2.3",
    "monaco-editor": "npm:@codingame/monaco-vscode-editor-api@~3.2.3",
    "monaco-editor-wrapper": "~4.0.2",
    "monaco-languageclient": "~8.1.1",
    "vscode": "npm:@codingame/monaco-vscode-api@~3.2.3"
  },
  "devDependencies": {
    "@cspell/eslint-plugin": "^8.17.5",
    "@types/bun": "~1.2.4",
    "@types/vscode": "~1.67.0",
    "cspell": "^8.17.5",
    "eslint": "~8.57.0",
    "eslint-plugin-jsdoc": "^50.6.6",
    "husky": "^9.1.7",
    "langium-cli": "~3.4.0",
    "lint-staged": "^15.4.3",
    "local-web-server": "^5.4.0",
    "prettier": "^3.5.3",
    "typescript": "~5.1.6",
    "typescript-eslint": "^8.26.1",
    "vite": "~5.2.7"
  },
  "volta": {
    "node": "18.19.1",
    "npm": "10.2.4"
  },
  "displayName": "docml",
  "engines": {
    "vscode": "^1.67.0",
    "node": ">=18.0.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "contributes": {
    "languages": [
      {
        "id": "docml",
        "aliases": [
          "Docml",
          "docml"
        ],
        "extensions": [
          ".docml"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "docml",
        "scopeName": "source.docml",
        "path": "syntaxes/docml.tmLanguage.json"
      }
    ]
  },
  "main": "./out/extension/main.cjs",
  "bin": {
    "docml-cli": "./bin/cli.js"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true
  }
}
